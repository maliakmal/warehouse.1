<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Picking order</th>
      <th>Product</th>
      <th>Location</th>
      <th>Location</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.picking_order %></td>
        <td><%= item.product %></td>
        <td><%= item.location %></td>
        <td><%= item.location %></td>
        <td><%= item.qty %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
