<%= form_for @location, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :x, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :x, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :y, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :y, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :z, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :z, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :barcode, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :barcode, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ref, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ref, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  locations_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
