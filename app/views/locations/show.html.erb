<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => Location %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @location.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @location.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:x) %></dt>
      <dd><pre class="prettyprint"><%= @location.x %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:y) %></dt>
      <dd><pre class="prettyprint"><%= @location.y %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:z) %></dt>
      <dd><pre class="prettyprint"><%= @location.z %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:barcode) %></dt>
      <dd><pre class="prettyprint"><%= @location.barcode %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ref) %></dt>
      <dd><pre class="prettyprint"><%= @location.ref %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

