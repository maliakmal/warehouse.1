<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :scheduled %>
    <%= f.input :ref %>
    <%= f.input :type %>
    <%= f.association :product %>
    <%= f.association :location %>
    <%= f.association :location %>
    <%= f.input :status %>
    <%= f.association :company %>
    <%= f.input :company_as %>
    <%= f.input :qty %>
    <%= f.input :description %>
    <%= f.input :priority %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
