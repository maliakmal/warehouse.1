<h1>Listing picking_orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picking_orders.each do |picking_order| %>
      <tr>
        <td><%= picking_order.status %></td>
        <td><%= picking_order.order %></td>
        <td><%= picking_order.user %></td>
        <td><%= link_to 'Show', picking_order %></td>
        <td><%= link_to 'Edit', edit_picking_order_path(picking_order) %></td>
        <td><%= link_to 'Destroy', picking_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

